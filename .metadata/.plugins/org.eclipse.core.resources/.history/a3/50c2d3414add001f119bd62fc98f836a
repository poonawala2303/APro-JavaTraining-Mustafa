package com.aurionpro;

public class Calculator {

	static double number1 = 30;
	static double number2 = 17;

	public static double sum(double number1, double number2) {
		return number1 + number2;
	}

	public static double difference(double number1, double number2) {
		return number1 - number2;
	}

	public static double product(double number1, double number2) {
		return number1 * number2;
	}

	public static double division(double number1, double number2) {
		return number1 / number2;
	}

	public static void main(String[] args) {
		System.out.println("Addition is " + sum(number1, number2));
		System.out.println("Difference is " + difference(number1, number2));
		System.out.println("Product is " + product(number1, number2));
		System.out.println("Division is " + division(number1, number2));
	}

}
